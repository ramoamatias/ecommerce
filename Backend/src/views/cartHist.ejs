<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%-include("./partials/linkcss.ejs")%>
    <title>Historial Cart</title>
</head>

<body>
    <%-include("./partials/nav.ejs",{section:"Historical Carts"})%>
    
    <div class="containerHistCarts">
        <button class="btn btn-primary" onclick="location.href='/'"> Volver a Home</button>
        <%if (carts.length > 0 ) {%>
        <ul class="list-group">
            <%carts.forEach(el=>{%>
            <li class="list-group-item disabled">
                <div>
                    <h2 id="idCart"><%=el.idCart%></h2>
                    <p><b>Fecha Compra:</b> <%=el.timestamp%></p>
                </div>
            </li>
            <%})%>
        </ul>
        <%} else {%>
        <div> Carrito Vacio</div>
        <%}%>    
    </div>

    <script src="../../index.js"></script>
    <%-include("./partials/linkjs.ejs")%>

</body>

</html>